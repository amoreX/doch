					<li><div><%= news1 %></div></li>
                    <% if (img1) { %>
                        <img src="<%=img1%>"  alt="news">
                    <% } %>
				<% } %>
				
				<% if (news2) { %>
					<li><div><%= news2 %></div></li>
                    <img src="<%=img2%>"  alt="oopsie no image :(">
				<% } %>
				
				<% if (news3) { %>
					<li><div><%= news3 %></div></li>
                    <img src="<%=img3%>"  alt="news">
				<% } %> -->
			
            
		</div>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.4/gsap.min.js"></script>
		<script>
			//cc4e82057511460fa37affd759119e03
            document.addEventListener('DOMContentLoaded', function() {

                gsap.from(".container",1.19,{
                    delay:1.75,
                    transform:"scale(0.1)",
                    y:-100
                })
                gsap.to(".container",0.65,{
                    delay:1.2,
                    opacity:1
                })
                gsap.to("#bgimage",1.5,{
                    delay:0.65,
                    opacity:1
                })

                const circleCursor = document.querySelector('.circle-cursor');

                document.addEventListener('mousemove', function(e) {
                    const x = e.clientX;
                    const y = e.clientY; //same concept as parallax 
                    circleCursor.style.transform = `translate(${x}px, ${y}px)`;
                });
                const sp=document.getElementById("button");
                sp.addEventListener("mouseover",function(e){
                    circleCursor.style.width = '45px';
                    circleCursor.style.height = '45px';
                    circleCursor.style.opacity = "0";
                })
                sp.addEventListener("mouseleave",function(e){
                    circleCursor.style.width = '25px';
                    circleCursor.style.height = '25px';
                    circleCursor.style.opacity = "1";
                })
                const t=document.querySelector(".tech");
                t.addEventListener("mouseover",function(e){
                    circleCursor.style.width = '40px';
                    circleCursor.style.height = '40px';
                    circleCursor.style.opacity = "0";

                })
                t.addEventListener("mouseleave",function(e){
                    circleCursor.style.width = '25px';
                    circleCursor.style.height = '25px';
                    circleCursor.style.opacity = "1";

                })
            });
			
		</script>
	</body>
</html>
