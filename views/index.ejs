	<style>
		body{
			overflow:hidden;
			margin:0;
		}
		#bgimage{
			z-index: -1;
			max-width: 100%;
			width:100%;
			height:100%;
			max-height: 100%;  
			position: absolute;
			top:0;
			bottom:0;
			left:0;
			right:0;
			transform:scale(1.4);
		}
		.container{
			z-index: 1;
			position: absolute;
			left: 5.3%;
			top: 7.3%;
			width: 89vw;
			height: 86vh;
			border-radius: 19px;
			border: 2px solid rgba(255, 255, 255, 0.38);
			background: linear-gradient(110deg, rgba(36, 118, 148, 0.19) 9.98%, rgba(248, 161, 148, 0.19) 92.36%);
			box-shadow: 0px 4px 168.5px 0px rgba(0, 0, 0, 0.24);
			backdrop-filter: blur(19.799999237060547px);
			display: flex;
			justify-content: center;
			align-items: center;
			
		}
		#doch{
			color: #042F44;
			position:absolute;			
			font-family: 'Italiana', sans-serif;
			font-size: calc(4vw + 2rem);
			font-style: normal;
			font-weight: 400;
			transform:rotate(-90deg);
			left:-5%;
			top:25%;
			margin:0px;
			
		}
		.navbar{
			z-index: 1;
			position:absolute;
			display:flex;
			gap:24px;
			color: #042F44;
			font-weight:600;
			font-size: calc(0.75vw + 0.5rem);
			font-family: 'Italiana', sans-serif;
			position:absolute;
			right:2.5%;
			top:1.5%;
			transition: 0.29s ease-in-out;

		}
		.navb {
			color: #042F44;
			transition: 0.35s ease-in-out;
			position: relative;
			cursor:default; 
		}

		.navb:hover {
			
			text-decoration: none; 
		}

		.navb::before {
			content: "";
			position: absolute;
			width: 0%;
			height: 0.6px;
			bottom: -0.6px; 
			left: 0%; 
			background-color: #042F44;
			visibility: hidden;
			transition: all .3s ease-in-out;
			transform-origin: center;
		}

		.navb:hover::before {
			width: 100%;
			visibility: visible;
			transform-origin:center;
		}
				
		#bar{
			z-index: 1;
            height:calc(0.75vw + 15.5px	);
			width:2px;
			background-color: #042F44;
		}
		.about{
			z-index: 1;
			position:absolute;
			right:3%;
			top:60%;
			width:251px;
			color:#DEDCE1;
		}
		#desc{
			font-size:calc(0.75vw + 0.5rem);
			font-family: 'Italiana', sans-serif;
		}
		#craving{
			font-size: calc(3vw + 2rem);
			position:absolute;
			right:15%;
			top:25%;
			font-family: 'Italianno', cursive;
			
		}
	</style>
